@using System.Web.Mvc;
@helper Script(string scriptName, UrlHelper url) {
	<script src="@url.Content("~/Scripts/" + scriptName)" type="text/javascript"></script>
}
@helper Image(string imageName, string alt, string cssClass, UrlHelper url) {
	<img src="@url.Content("~/Content/Images/" + imageName)" alt="@alt" class="@cssClass" />	
}